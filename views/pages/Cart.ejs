<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%-include('../partials/Stylesheet');%>
    <title>カート</title>
  </head>

  <body>
    <div class="grid-container">
      <%-include('../partials/Header');%>
      <main>
        <div class="row">
          <div class="col-2">
            <div class="cart-index">
              <h1>カート一覧</h1>
              <ul>
                <%locals.cartItem.map((p)=>{%>
                <li class="eachCart" key="<%=p.productId%>">
                  <div class="row dTable">
                    <div class="min-10 dTable_c">
                      <h3>
                          <a href="/product/<%=p.productId%>"> <%=p.name%> </a>
                      </h3>
                    </div>
                    <input
                      class="eachInput dTable_c"
                      type="number"
                      min="1"
                      max="<%=p.countInStock%>"
                      value="<%=p.qty%>"
                    />

                    <div class="eachPrice dTable_c"><%=p.price%></div>

                    <div class="sumPrice dTable_c"><%=p.price*p.qty%></div>
                    <form action="cart/delete/<%=p.productId%>" method="POST">
                      <button class="cart-delete dTable_c">削除</button>
                    </form>
                  </div>
                </li>
                <%})%>
              </ul>
            </div>
          </div>
          <div class="col-1">
            <div class="cart-subtotal">
              <div class="card card-body">
                <ul>
                  <li>
                    <h2 id="sum_price"></h2>
                    <h2 id="sum_qty"></h2>
                  </li>
                  <li>
                    <form action="/checkOut/2" class="form">
                      <button class="primary block" type="submit">
                        支払ボタン
                      </button>
                    </form>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </main>
      <%-include('../partials/Footer');%>
    </div>
    <%-include('../partials/Jquery');%>
  </body>
</html>
