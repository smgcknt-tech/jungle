<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%-include('../partials/Stylesheet');%>
    <title>注文画面</title>
  </head>
  <body>
    <div class="grid-container">
      <%-include('../partials/Header');%>
      <main>
        <%-include('../partials/CheckOutSteps',{ steps: steps });%>
        <%if(steps[1] !=="" && steps[2] ===""){%>
        <%-include('../partials/Shipping');%>
        <%} else if(steps[2] !=="" &&steps[3] ===""){%> 
        <%-include('../partials/Payment');%> 
        <%} else if(steps[3] !==""){%> 
        <%-include('../partials/PlaceOrder');%> 
        <%}%>
      </main>
      <%-include('../partials/Footer');%>
    </div>
    <script src="//code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous" ></script>
    <script src="https://ajaxzip3.github.io/ajaxzip3.js" charset="UTF-8"></script>
    <script src="https://www.paypal.com/sdk/js?client-id=<%=paypalId%>&currency=JPY"> </script>
    <script src="/javascripts/paypal.js"></script>
    <%-include('../partials/Jquery');%>
  </body>
</html>
