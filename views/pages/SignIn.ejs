<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%-include('../Stylesheet');%>
    <title>サインイン</title>
  </head>

  <body>
    <div class="grid-container">
      <%-include('../Header');%>
      <main>
        <div>
          <form class="form" action="/SignIn" method="POST">
            <div>
              <h1>サインイン</h1>
            </div>
            <% if (errors.length > 0) { %>
              <div class="error-container">
                <ul class="errors">
                  <% errors.forEach((error)=>{ %>
                    <li> <%= error %> </li>
                  <% }); %>
                </ul>
              </div>
              <% } %>
            <div>
              <label for="email">メールアドレス</label>
              <input type="email" id="email" placeholder="面倒な場合は「XXX@YYY.com」でログイン下さい" name="email" />
            </div>
              <div>
                <label for="password">パスワード</label>
                <input type="password" id="password" placeholder="面倒な場合は「aaaa」でログイン下さい" name="password" />
              </div>            
              <div>
                  <label for="">
                      <button id="signIn-button" class="primary block" type="submit">サインイン</button>
                  </label>
              </div>
              <div>
                  <strong><a href="/signUp">新規登録はこちら</a></strong>
              </div>
          </form>
        </div> 
        <%-include('../Support');%>  
      </main>
      <%-include('../Footer');%>
    </div>
    <%-include('../Jquery');%>
  </body>
</html>
