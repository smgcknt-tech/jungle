<div class="row top">
  <div class="col-2">
    <ul>
      <li>
        <div class="card card-body">
          <h2>配送</h2>
          <p>郵便番号: <%=locals.shipping.postalCode%></p>
          <p>住所: <%=locals.shipping.adress%></p>
        </div>
        <div class="card card-body">
          <h2>お支払方法</h2>
          <p>お支払方法: <%=locals.userData.payment.method%></p>
        </div>
        <div class="card card-body">
          <h2>注文内容</h2>
          <div class="cartItems placeOrder">
            <ul>
              <%locals.cartItem.map((p)=>{%>
              <li class="eachCart" key="<%=p.productId%>">
                <div class="row dTable">
                  <div class="min-10 dTable_c">
                    <h3>
                      <a href="/product/<%=p.productId%>"><%=p.name%></a>
                    </h3>
                  </div>
                  <div class="eachQty dTable_c"><%=p.qty%>点</div>

                  <div class="eachPrice dTable_c"><%=p.price%>円</div>

                  <div class="orderedSumPrice dTable_c">小計<%=p.price*p.qty%>円</div>
                </div>
              </li>
              <%})%>
            </ul>
          </div>
        </div>
      </li>
    </ul>
  </div>
  <div class="col-1">
    <div class="card card-body">
      <ul>
        <li>
          <h2>注文内容</h2>
          <div id="ordered_qty"></div>
          <div id="ordered_price" value=""></div>
        </li>
      <a href="/checkOut/orderConfirmation"><button class="primary width-100">確定</button></a>
      </ul>
    </div>
  </div>
</div>
